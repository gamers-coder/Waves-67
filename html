    <!-- --- Global Application Logic Script (Moved to end of body) --- -->
    <script>
        // --- Settings Modal Logic and Dragging Implementation ---
        document.addEventListener('DOMContentLoaded', () => {
            const settingsButton = document.getElementById('settings-button');
            const closeButton = document.getElementById('close-settings-button');
            const modalBackdrop = document.getElementById('settings-modal');
            const draggableWindow = document.getElementById('draggable-window');
            const dragHandle = document.getElementById('drag-handle');
            const navButtons = document.querySelectorAll('.nav-button');
            const contentSections = document.querySelectorAll('.content-section');
            const cloakingToggle = document.getElementById('cloaking-toggle');
            const cloakingStatus = document.getElementById('cloaking-status');
            // ID changed from open-code-button
            const openLivePreviewButton = document.getElementById('open-live-preview-button'); 

            // NEW: Notification Panel Elements
            const notificationBtn = document.getElementById('notification-btn');
            const closeNotificationBtn = document.getElementById('close-notification-btn');
            const notificationPanel = document.getElementById('notification-panel');

            // NEW: Floating Action Button Element
            const fabButton = document.getElementById('fab-button');

            // NEW: Game Page Elements
            const gamesLink = document.getElementById('games-link');
            const homeLink = document.getElementById('home-link');
            const gamesSection = document.getElementById('games-section');
            const homeSection = document.getElementById('home-section');
            // NEW: Auth Elements
            const onboardingSection = document.getElementById('onboarding-section');
            const loginSection = document.getElementById('login-section');
            const onboardingForm = document.getElementById('onboarding-form');
            const loginForm = document.getElementById('login-form');
            const switchToLogin = document.getElementById('switch-to-login');
            const switchToOnboard = document.getElementById('switch-to-onboard');
            // NEW: Taskbar and Logout Elements
            const taskbar = document.getElementById('taskbar');
            const logoutButton = document.getElementById('logout-button');


            // NEW: Check login state on load
            function checkLoginState() {
                const onboarded = localStorage.getItem('onboarded') === 'true';
                const loggedInUser = localStorage.getItem('loggedInUser');

                if (!onboarded) {
                    showSection(onboardingSection);
                    taskbar.classList.add('hidden');
                } else if (!loggedInUser) {
                    showSection(loginSection);
                    taskbar.classList.add('hidden');
                } else {
                    showSection(homeSection);
                    taskbar.classList.remove('hidden');
                }
            }

            // NEW: Show specific section and hide others
            function showSection(sectionToShow) {
                const sections = [onboardingSection, loginSection, homeSection, gamesSection];
                sections.forEach(section => {
                    if (section) section.classList.add('hidden');
                });
                if (sectionToShow) {
                    sectionToShow.classList.remove('hidden');
                }
            }

            // NEW: Onboarding Form Handler
            onboardingForm.addEventListener('submit', (e) => {
                e.preventDefault();
                const email = document.getElementById('onboard-email').value;
                const username = document.getElementById('onboard-username').value;
                const password = document.getElementById('onboard-password').value;
                const passwordConfirm = document.getElementById('onboard-password-confirm').value;

                if (password !== passwordConfirm) {
                    alert("Passwords do not match!");
                    return;
                }

                // Basic password strength check (example)
                if (password.length < 6) {
                    alert("Password must be at least 6 characters long.");
                    return;
                }

                // Store account details (hashed password is crucial in real apps)
                // For this example, we store the raw password for simplicity (NOT SECURE)
                const hashedPassword = btoa(password); // Base64 encoding (not actual hashing)
                const accounts = JSON.parse(localStorage.getItem('accounts') || '{}');
                if (accounts[username]) {
                    alert("Username already exists!");
                    return;
                }
                accounts[username] = { email, password: hashedPassword };
                localStorage.setItem('accounts', JSON.stringify(accounts));
                localStorage.setItem('onboarded', 'true');

                alert("Account created successfully! You can now log in.");
                showSection(loginSection);
            });

            // NEW: Login Form Handler
            loginForm.addEventListener('submit', (e) => {
                e.preventDefault();
                const username = document.getElementById('login-username').value;
                const password = document.getElementById('login-password').value;

                const accounts = JSON.parse(localStorage.getItem('accounts') || '{}');
                const user = accounts[username];

                if (user && user.password === btoa(password)) { // Compare hashed password
                    localStorage.setItem('loggedInUser', username);
                    showSection(homeSection);
                    taskbar.classList.remove('hidden');
                } else {
                    alert("Invalid username or password.");
                }
            });

            // NEW: Logout Handler
            logoutButton.addEventListener('click', () => {
                localStorage.removeItem('loggedInUser');
                showSection(loginSection);
                taskbar.classList.add('hidden');
            });

            // NEW: Navigation Switches
            switchToLogin.addEventListener('click', (e) => {
                e.preventDefault();
                showSection(loginSection);
            });

            switchToOnboard.addEventListener('click', (e) => {
                e.preventDefault();
                showSection(onboardingSection);
            });

            // NEW: Show Games Page
            const showGamesPage = (e) => {
                e.preventDefault(); // Prevent default anchor behavior
                if (localStorage.getItem('loggedInUser')) {
                    homeSection.classList.add('hidden');
                    gamesSection.classList.remove('hidden');
                } else {
                    alert("Please log in first.");
                    showSection(loginSection);
                    taskbar.classList.add('hidden');
                }
            };

            // NEW: Show Home Page
            const showHomePage = (e) => {
                e.preventDefault(); // Prevent default anchor behavior
                gamesSection.classList.add('hidden');
                homeSection.classList.remove('hidden');
            };


            const toggleSettingsModal = () => {
                modalBackdrop.classList.toggle('hidden');
            };
            
            // NEW: Toggle Notification Panel
            const toggleNotificationPanel = () => {
                notificationPanel.classList.toggle('hidden');
                notificationPanel.classList.toggle('open');
            };

            // NEW: Close Notification Panel
            const closeNotificationPanel = () => {
                notificationPanel.classList.remove('open');
                setTimeout(() => notificationPanel.classList.add('hidden'), 300); // Match transition duration
            };

            // NEW: FAB Click Handler
            const handleFabClick = () => {
                alert("Floating Action Button clicked! This could trigger a 'New Chat' or 'Quick Prompt' action.");
            };

            // Function to display a custom error message (replaces alert/confirm)
            const showMessageBox = (title, message, colorClass) => {
                 const messageBox = document.createElement('div');
                messageBox.className = "fixed inset-0 bg-black/80 flex items-center justify-center z-[999]";
                messageBox.innerHTML = `
                    <div class="p-6 bg-card-dark rounded-xl border border-${colorClass} shadow-xl max-w-sm">
                        <h6 class="text-xl text-${colorClass} mb-2">${title}</h6>
                        <p class="text-gray-300">${message}</p>
                        <button onclick="this.parentNode.parentNode.remove()" class="mt-4 px-4 py-2 bg-gray-700/70 text-white rounded-lg hover:bg-gray-600 transition">Dismiss</button>
                    </div>
                `;
                document.body.appendChild(messageBox);
            };


            // 1. Modal Open/Close Handlers
            if (settingsButton) {
                settingsButton.addEventListener('click', toggleSettingsModal);
            }
            if (closeButton) {
                closeButton.addEventListener('click', toggleSettingsModal);
            }
            // Close modal if user clicks on the backdrop (outside the window content)
            if (modalBackdrop) {
                 modalBackdrop.addEventListener('click', (e) => {
                    // Check if the click target is the modal container itself
                    if (e.target.id === 'settings-modal') {
                        toggleSettingsModal();
                    }
                });
            }

            // NEW: Notification Panel Event Listeners
            if (notificationBtn) {
                notificationBtn.addEventListener('click', toggleNotificationPanel);
            }
            if (closeNotificationBtn) {
                closeNotificationBtn.addEventListener('click', closeNotificationPanel);
            }
            // Close panel if clicking outside its content (on the backdrop)
            document.addEventListener('click', (e) => {
                if (!notificationPanel.contains(e.target) && !notificationBtn.contains(e.target) && !notificationPanel.classList.contains('hidden')) {
                    closeNotificationPanel();
                }
            });

            // NEW: FAB Event Listener
            if (fabButton) {
                fabButton.addEventListener('click', handleFabClick);
            }

            // NEW: Game Page Navigation Event Listeners
            if (gamesLink) {
                gamesLink.addEventListener('click', showGamesPage);
            }
            if (homeLink) {
                homeLink.addEventListener('click', showHomePage);
            }


            // 2. Dragging Logic
            if (draggableWindow && dragHandle) {
                let isDragging = false;
                let offsetX, offsetY;

                const startDrag = (e) => {
                    // Stop default browser behavior (like touch scrolling or text selection)
                    e.preventDefault(); 
                    isDragging = true;
                    
                    // Use touch or mouse coordinates
                    const clientX = e.clientX || (e.touches ? e.touches[0].clientX : 0);
                    const clientY = e.clientY || (e.touches ? e.touches[0].clientY : 0);

                    // Calculate the initial offset relative to the viewport
                    const rect = draggableWindow.getBoundingClientRect();
                    
                    offsetX = clientX - rect.left;
                    offsetY = clientY - rect.top;

                    // Crucially, clear the centering transform and set explicit position 
                    // before dragging starts, so we only use left/top for movement.
                    draggableWindow.style.left = rect.left + 'px';
                    draggableWindow.style.top = rect.top + 'px';
                    draggableWindow.style.transform = 'none';

                    // Attach drag listeners to the entire document
                    document.addEventListener('mousemove', onDrag);
                    document.addEventListener('mouseup', endDrag);
                    document.addEventListener('touchmove', onDrag);
                    document.addEventListener('touchend', endDrag);
                };

                const onDrag = (e) => {
                    if (!isDragging) return;

                    // Determine coordinates (handles both mouse and touch)
                    const clientX = e.clientX || (e.touches ? e.touches[0].clientX : 0);
                    const clientY = e.clientY || (e.touches ? e.touches[0].clientY : 0);

                    let newLeft = clientX - offsetX;
                    let newTop = clientY - offsetY;

                    // Apply new position
                    draggableWindow.style.left = newLeft + 'px';
                    draggableWindow.style.top = newTop + 'px';
                };

                const endDrag = () => {
                    isDragging = false;
                    document.removeEventListener('mousemove', onDrag);
                    document.removeEventListener('mouseup', endDrag);
                    document.removeEventListener('touchmove', onDrag);
                    document.removeEventListener('touchend', endDrag);
                };

                // Attach start listeners to the handle
                dragHandle.addEventListener('mousedown', startDrag);
                dragHandle.addEventListener('touchstart', startDrag);
            }

            // 3. Tab Switching Logic for Sidebar
            const switchTab = (targetId) => {
                // Deactivate all buttons and hide all content
                navButtons.forEach(btn => {
                    btn.classList.remove('bg-card-dark', 'text-white');
                    btn.classList.add('text-gray-400');
                });
                contentSections.forEach(section => {
                    section.classList.add('hidden');
                });

                // Activate the clicked button
                const activeButton = document.querySelector(`.nav-button[data-target="${targetId}"]`);
                if (activeButton) {
                    activeButton.classList.add('bg-card-dark', 'text-white');
                    activeButton.classList.remove('text-gray-400');
                }

                // Show the corresponding content
                const activeSection = document.getElementById(`${targetId}-section`);
                if (activeSection) {
                    activeSection.classList.remove('hidden');
                }
            };

            // Attach listeners to navigation buttons
            navButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const target = button.getAttribute('data-target');
                    switchTab(target);
                });
            });

            // 4. Cloaking Toggle Status Update (Interaction)
            if (cloakingToggle) {
                 cloakingToggle.addEventListener('change', (e) => {
                    if (e.target.checked) {
                        cloakingStatus.textContent = 'Status: Active (Partial)';
                        cloakingStatus.classList.remove('text-gray-400', 'text-red-500');
                        cloakingStatus.classList.add('text-green-400');
                    } else {
                         cloakingStatus.textContent = 'Status: Disabled';
                         cloakingStatus.classList.remove('text-green-400', 'text-red-500');
                         cloakingStatus.classList.add('text-gray-400');
                    }
                });
            }

            // 5. Live Preview Export Logic (UPDATED)
            const openLivePreviewInNewWindow = () => {
                // Get the complete HTML of the current document, including the DOCTYPE
                const htmlContent = document.documentElement.outerHTML;

                // Open a new window
                const newWindow = window.open('', '_blank');

                if (newWindow) {
                    // CRITICAL CHANGE: Write the full HTML content directly to the new document.
                    // This tells the browser to parse and render it as a live website.
                    newWindow.document.write('<!DOCTYPE html>\n' + htmlContent);
                    newWindow.document.close();
                    
                    newWindow.focus();
                } else {
                    showMessageBox(
                        'Error: Pop-up Blocked', 
                        'Please allow pop-ups for this site to open the live preview.',
                        'red-500'
                    );
                }
            };

            // Attach listener to the new button ID
            if (openLivePreviewButton) {
                openLivePreviewButton.addEventListener('click', openLivePreviewInNewWindow);
            }

            // Set the default tab on load
            switchTab('appearance');

            // NEW: Initialize the page state
            checkLoginState();

        });
    </script>
</body>
</html>
