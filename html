    <!-- --- Custom Styles and Star Field Generation Script --- -->
    <script>
        // --- JavaScript for Dynamic Star Field Generation ---
        function generateStarField(count) {
            let shadow = '';
            for (let i = 0; i < count; i++) {
                const x = Math.floor(Math.random() * 100);
                const y = Math.floor(Math.random() * 100); 
                // Smaller size for subtlety
                const size = (Math.random() * 0.5) + 0.3; 
                // Lowered opacity range for a very subtle, pale look
                const opacity = (Math.random() * 0.15) + 0.05; 

                // Pure white stars
                shadow += `${x}vw ${y}vh 0 ${size}px rgba(255, 255, 255, ${opacity})`;
                if (i < count - 1) {
                    shadow += ',\n';
                }
            }
            return shadow;
        }

        const starShadows = generateStarField(200); 

        const style = document.createElement('style');
        style.innerHTML = `
            @keyframes floatUp {
                0% { transform: translateY(100vh); } 
                100% { transform: translateY(-100vh); }
            }

            .star-field::before {
                content: "";
                position: fixed;
                top: 0;
                left: 0;
                width: 1px;
                height: 1px;
                background: transparent;
                box-shadow: ${starShadows};
                animation: floatUp 40s linear infinite;
                z-index: -1;
            }
            
            .star-field::after {
                content: "";
                position: fixed;
                top: 0;
                left: 0;
                width: 1px;
                height: 1px;
                background: transparent;
                box-shadow: ${generateStarField(150)};
                animation: floatUp 50s linear infinite;
                animation-delay: -20s;
                z-index: -1;
            }

            /* UPDATED: Bottom Light Gradient (Brighter, larger Monochromatic glow) */
            .bottom-light-gradient {
                position: fixed;
                bottom: 0;
                left: 0;
                width: 100%;
                height: 350px; /* Increased height */
                /* Radial gradient with increased white opacity */
                background: radial-gradient(circle at center bottom, rgba(255, 255, 255, 0.15) 0%, transparent 60%); /* Increased 0.08 -> 0.15 */
                filter: blur(120px); /* Increased blur for more softness */
                pointer-events: none;
                z-index: -1; 
            }

            /* New: Futuristic Glow Effect for Interactive Elements (Monochromatic) */
            .futuristic-glow {
                transition: box-shadow 0.3s ease-in-out, border-color 0.3s ease-in-out;
            }

            /* Enhanced glow on hover/focus */
            .futuristic-glow:hover, .futuristic-glow:focus {
                /* Stronger inner and outer gray shadow */
                box-shadow: 0 0 20px rgba(204, 204, 204, 0.6), inset 0 0 8px rgba(204, 204, 204, 0.3);
                border-color: #ffffff !important; 
                /* Subtle change to focus ring for quick actions */
                outline: 2px solid theme('colors.gray.400');
                outline-offset: 2px;
            }

            /* New: Text Shadow for the main title */
            .title-shadow {
                text-shadow: 0 0 15px rgba(255, 255, 255, 0.3), 0 0 5px rgba(255, 255, 255, 0.1);
            }
            
            /* Custom Toggle Switch Styles */
            .peer:checked + div {
                background-color: #4b5563; /* Tailwind gray-600 */
            }
            .peer:checked + div:after {
                background-color: #ffffff;
                transform: translateX(1.5rem);
            }

            /* NEW: Floating Action Button (FAB) Styles */
            .fab {
                position: fixed;
                bottom: 4rem; /* Above the taskbar */
                right: 1.5rem;
                z-index: 10;
                animation: pulse 2s infinite;
            }
            @keyframes pulse {
                0% { box-shadow: 0 0 0 0 rgba(204, 204, 204, 0.4); }
                70% { box-shadow: 0 0 0 10px rgba(204, 204, 204, 0); }
                100% { box-shadow: 0 0 0 0 rgba(204, 204, 204, 0); }
            }

            /* NEW: Notification Panel Styles */
            .notification-panel {
                right: -100%; /* Hidden by default */
                transition: right 0.3s ease;
            }
            .notification-panel.open {
                right: 0;
            }

            /* NEW: Status Bar Item */
            .status-item {
                height: 0.25rem; /* Thin bar */
                background-color: theme('colors.gray.700');
                border-radius: 0.125rem;
                overflow: hidden;
            }
            .status-item-fill {
                height: 100%;
                background-color: theme('colors.accent-mono');
                transition: width 0.5s ease;
            }

            /* NEW: Game Card Styles */
            .game-card {
                transition: transform 0.2s ease, box-shadow 0.2s ease;
            }
            .game-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 25px -5px rgba(204, 204, 204, 0.2), 0 10px 10px -5px rgba(0, 0, 0, 0.1);
            }

            /* NEW: Onboarding & Login Section Styles */
            .auth-section {
                max-width: 400px; /* Limit width for forms */
            }

        `;
        document.head.appendChild(style);
    </script>
